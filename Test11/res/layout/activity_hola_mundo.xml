<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".HolaMundoActivity" >

    <EditText
        android:id="@+id/holaMundo_ed_Numero"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="number" >

        <requestFocus />
    </EditText>

    <Button
        android:id="@+id/holaMundo_b_saluda"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Que numero eres" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="Large Text"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:text="TextView" />

    </LinearLayout>

    <Spinner
        android:id="@+id/sp_ideas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:entries="@array/complemento" />

    <Spinner
        android:id="@+id/sp_bonito"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>