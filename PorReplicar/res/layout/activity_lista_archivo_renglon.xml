<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context=".ListaArchivoRenglon" >

    <ImageView
        android:id="@+id/listaArchivoRenglon_tv_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@android:drawable/ic_menu_share" />

    <TextView
        android:id="@+id/listaArchivoRenglon_tv_noRegistros"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="000"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/listaArchivoRenglon_tv_nombreTienda"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Medium Text"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/listaArchivoRenglon_tv_nombreServer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView" />

</LinearLayout>